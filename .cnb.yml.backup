# .cnb.yml
main:
  push:
    - services:
        - docker
      stages:
        # 非同名镜像构建&推送
        - name: docker build
          script: cd frontend && docker build -t ${CNB_DOCKER_REGISTRY}/${CNB_REPO_SLUG_LOWERCASE}/frontend-app:v1.0.0 .
        - name: docker push
          script: docker push ${CNB_DOCKER_REGISTRY}/${CNB_REPO_SLUG_LOWERCASE}/frontend-app:v1.0.0

